<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1><%= title %> </h1>
                <ul>
                    <% if(genre_list.length === 0){ %>

                    <li>There are no genres</li>

                    <% }else{ %>
                    <% genre_list.forEach(genre =>{ %>

                    <li><a href="<%= genre.url %> "><%= genre.name %> </a></li>

                    <% }) %>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</body>

</html>