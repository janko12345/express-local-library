<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1><%= genre.name %> </h1>
                <% if(genre_books.length === 0){ %>
                <p>This genre has no books</p>
                <% } else{ %>
                <% genre_books.forEach(book =>{ %>
                <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                <dd><%= book.summary %></dd>
                <% }) %>
                <% } %>
                <p><a class="btn btn-primary" role="button" href="<%= genre.url + "/delete"%>">Delete genre</a></p>
            </div>
        </div>
    </div>
</body>

</html>