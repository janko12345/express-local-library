<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1><%= title %>: <%= author.name %></h1>
                <p>age: <%= author.lifespan%></p>

                <% if (author_books.length) { %>
                <p>
                    <strong>Delete the following books before attempting to delete this author</strong>
                <div style="margin: 20px 0 0 20px">
                    <h4>Books</h4>
                    <dl>
                        <% author_books.forEach(book => { %>
                        <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                        <dd><%= book.summary %></dd>
                        <% }) %>
                    </dl>
                </div>
                </p>
                <% } else{ %>
                <p>Do you really want to delete this Author?</p>
                <form action="" method="post">
                    <div class="form-group">
                        <input type="hidden" id="authorid" class="form-control" required value="<%= author._id %>"
                            name="authorid">
                    </div>
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>