<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1><%= title %> </h1>
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="first_name">First Name: </label>
                        <input type="text" id="first-name" class="form-control"
                            placeholder="First name (Christian) last" name="first_name" required
                            value="<%= author ? author.first_name : "" %> ">
                        <label for="family_name">Family Name: </label>
                        <input type="text" id="family_name" class="form-control" name="family_name"
                            placeholder="Family name (surname)" required
                            value="<%= author ? author.family_name : "" %> ">
                    </div>
                    <div class="form-group">
                        <label for="date_of_birth">Date of birth: </label>
                        <input type="date" id="date_of_birth" class="form-control" name="date_of_birth"
                            value="<%= author ? author.date_of_birth_formatted : "" %> ">
                    </div>
                    <div class="form-group">
                        <label for="date_of_death">Date of death: </label>
                        <input type="date" id="date_of_death" class="form-control" name="date_of_death"
                            value="<%= author ? author.date_of_death_formatted : "" %> ">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <% if(errors){ %>
                    <ul>
                        <% errors.forEach(err =>{ %>
                        <li><%= err.msg %> </li>
                        <% }) %>
                    </ul>
                    <% } %>

                </form>
            </div>
        </div>
    </div>
</body>

</html>