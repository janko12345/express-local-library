<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1>Author: <%= author.name %> </h1>
                <% birth = author.date_of_birth_formatted;
                   death = author.date_of_death_formatted; %>
                <p><%= birth ? `*${birth}` : "" %> <%= birth && death ? "-" : "" %> <%= death ? `â€ ${death}` : "" %> </p>
                <div style="margin: 20px 0 0 20px;">
                    <h4>Books</h4>
                    <dl>
                        <% if(author_books.length === 0){ %>

                        <p>This author has no books</p>

                        <% } else{%>
                        <%author_books.forEach(book =>{ %>

                        <dt><a href="<%= book.url %> "><%= book.title %> </a></dt>
                        <dt><%= book.summary %> </dt>

                        <% })} %>
                    </dl>
                </div>
                <hr>
                <p><a class="btn btn-primary" role="button" href="<%= author.url + "/delete"%>">Delete author</a></p>
            </div>
        </div>
    </div>
</body>

</html>