<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/bootstrapHead") %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include("../partials/sidebar") %>
            </div>
            <div class="col-sm-10">
                <h1><%= title %>: <%= book.title %></h1>
                <p>ISBN: <%= book.isbn%></p>

                <% if (bookinstances.length) { %>
                <p>
                    <strong>Delete the following copies before attempting to delete this book</strong>
                <div style="margin: 20px 0 0 20px">
                    <h4>Copies</h4>
                    <% bookinstances.forEach(instance => { %>
                    <p><a href="<%= instance.url %>"><%= instance.imprint %></a></p>
                    <% }) %>
                </div>
                </p>
                <% } else{ %>
                <p>Do you really want to delete this Book?</p>
                <form action="" method="post">
                    <div class="form-group">
                        <input type="hidden" id="bookid" class="form-control" required value="<%= book._id %>"
                            name="bookid">
                    </div>
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>